@page "/login"
@layout Football.ClientApp.Shared.EmptyLayout
@inherits LoginComponent


<div class="container-fluid h-100 mt-5">
    <h2>Log In</h2>
    <hr />
    <div class="row justify-content-center align-content-center h-100">
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <EditForm Model="@loginRequestDTO" OnValidSubmit="LoginProcess">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <input @bind-value="loginRequestDTO.UserName" class="form-control" placeholder="Enter Username" />
                </div>
                <div class="form-group">
                    <input @bind-value="loginRequestDTO.Password" class="form-control" type="password" placeholder="Enter Password" />
                </div>
                <button class="btn btn-info btn-block">Log In</button>
            </EditForm>
        </div>
    </div>
</div>
